generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @unique
  password       String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  files          File[]    
  tokens    Token[]
  
  @@index([id])
}

model Token {
  id        Int      @id @default(autoincrement())
  userId    String   
  token     String   @unique
  device    String?
  isValid   Boolean  @default(true)
  createdAt DateTime @default(now())
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId, device], name: "user_device_index")
}


model File {
  id              Int       @id @default(autoincrement())
  name            String    
  extension       String    
  mimeType        String    
  size            Int       
  uploadDate      DateTime  @default(now()) 
  userId          String   
  user            User      @relation(fields: [userId], references: [id])
  status          String    @default("uploaded")
  processingErrors String?  
  filePath        String?   

  @@index([userId])
  @@index([status])
}
