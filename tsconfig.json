{
  "compilerOptions": {
    "target": "ES2020", // Целевая версия JavaScript
    "module": "commonjs", // Система модулей
    "lib": ["ES2020"], // Библиотеки, которые будут использоваться
    "outDir": "./dist", // Директория для выходных файлов
    "rootDir": "./src", // Корневая директория исходных файлов
    "strict": true, // Включает все строгие проверки типов
    "moduleResolution": "node", // Метод разрешения модулей
    "esModuleInterop": true, // Совместимость с модулями ES
    "skipLibCheck": true, // Пропуск проверки типов библиотек
    "forceConsistentCasingInFileNames": true, // Проверка использования одинакового регистра в именах файлов
    "resolveJsonModule": true, // Позволяет импортировать модули JSON
    "sourceMap": true, // Создание карт источников для отладки
    "experimentalDecorators": true, // Поддержка экспериментальных декораторов
    "emitDecoratorMetadata": true // Генерация метаданных типов для декораторов
  },
  "include": ["src/**/*.ts"], // Включение файлов для компиляции
  "exclude": ["node_modules", "dist"] // Исключение папок из компиляции
}
